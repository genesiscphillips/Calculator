#The Button
<TheButton@Button>:
    font_size: 64
    color: [1, 1, 1, 1]
    background_normal: ''
    background_color: [0.529, 0.808, 0.98, 1]

<CalcLayout>:
    id: calculatorgui
    display: entry
    rows: 5
    padding: 10
    spacing: 10

    #Input
    BoxLayout:
        TextInput:
            id: entry
            font_size: 128
            multiline: False

    BoxLayout:
        spacing: 10
        TheButton:
            text: "7"
            on_press: entry.text += self.text
        TheButton:
            text: "8"
            on_press: entry.text += self.text
        TheButton:
            text: "9"
            on_press: entry.text += self.text
        TheButton:
            text: "+"
            on_press: entry.text += self.text

    BoxLayout:
        spacing: 10
        TheButton:
            text: "4"
            on_press: entry.text += self.text
        TheButton:
            text: "5"
            on_press: entry.text += self.text
        TheButton:
            text: "6"
            on_press: entry.text += self.text
        TheButton:
            text: "-"
            on_press: entry.text += self.text

    BoxLayout:
        spacing: 10
        TheButton:
            text: "1"
            on_press: entry.text += self.text
        TheButton:
            text: "2"
            on_press: entry.text += self.text
        TheButton:
            text: "3"
            on_press: entry.text += self.text
        TheButton:
            text: "*"
            on_press: entry.text += self.text

    BoxLayout:
        spacing: 10
        TheButton:
            text: "AC"
            on_press: entry.text = ""
        TheButton:
            text: "0"
            on_press: entry.text += self.text
        TheButton:
            text: "="
            on_press: calculatorgui.calculate(entry.text)
        TheButton:
            text: "/"
            on_press: entry.text += self.text
